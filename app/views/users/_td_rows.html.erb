<% @users.each do |user| %>
  <tr>
    <td>
      <%= link_to user.last_name, user_path(user), class: "ks-red-light" %>
    </td>
    <td>
      <%= user.first_name %>
    </td>
    <td align="center">
      <%= user.fixed_assets.count %>
    </td>
    <td align="center">
      <%= user.unfixed_assets.count %>
    </td>
    <td align="center">
      <% if user.admin %>
        <span class="glyphicon glyphicon-ok"></span>
      <% end %>
    </td>
    <td align="center">
      <%= link_to edit_user_path(user) do %>
        <span class="glyphicon glyphicon-info-sign ks-red-light"></span>
      <% end %>
      
      <%= link_to user_path(user), method: "delete",
                                   data: { confirm: "Are you sure you " + 
                                   "want to DELETE #{user.first_name} " + 
                                   "#{user.last_name}?" } do %>
        <span class="glyphicon glyphicon-remove-circle ks-red-light">
        </span>
      <% end %>
    </td>
  </tr>
<% end %>