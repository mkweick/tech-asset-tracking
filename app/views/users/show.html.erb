<% @page_title = "#{@user.first_name} #{@user.last_name}" %>

<%= render 'shared/title', title: "#{@user.first_name} #{@user.last_name}" %>

<div class= "row">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <div class="text-center user-asset-headings">
      Fixed Assets (<%= @fas.length %>)
    </div><br/>
    <% if @fas.any? %>
    
      <%= render 'user_fa_table' %>
    
    <% else %>
      <div class="text-center">
        You have no fixed assets assigned to your profile. If you feel this is
        a mistake,<br/><a href="mailto:it@example.com">please contact your 
        system administrator.</a>
      </div><br/>
    <% end %>
    <br>
    <% if admin? %>
      <div class="text-center">
        <%= link_to "Assign Fixed Assets", categories_path(user: @user.username),
                                           class: "btn btn-default ks-red-btn" %>
      </div>
    <% end %>
    <br/>
  </div>
</div>
<hr/><br/>
<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <div class="text-center user-asset-headings">
      Loaned Assets (<%= @ufas.length %>)
    </div><br/>
    <% if @ufas.any? %>
      
      <%= render 'user_ufa_table' %>
      
    <% else %>
      <div class="text-center">
        You have no loaned assets checked out at this time.
      </div><br/>
    <% end %>
    <br/>
    <% if current_user == @user %>
      <div class="text-center">
        <%= link_to "Check Out Equipment", categories_path,
                                         class: "btn btn-default ks-red-btn" %>
      </div>
    <% end %>
  </div>
</div>