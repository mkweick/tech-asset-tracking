<div class="row">
  <div class="well col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4">
    <%= form_tag '/login', method: 'post', class: "form-horizontal" do %>
      <div class="form-group form-group-lg">
        <%= label_tag :username, nil, class: "col-xs-3 col-md-4 control-label" %>
        <div class="col-xs-9 col-md-8">
          <%= text_field_tag :username, nil, autofocus: 'autofocus',
                                             class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group form-group-lg">
        <%= label_tag :password, nil, class: "col-xs-3 col-md-4 control-label" %>
        <div class="col-xs-9 col-md-8">
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>
      </div>
      
      <div class="text-center">
        <%= submit_tag "Log in", class: "btn btn-default ks-red-btn" %>
      </div>
    <% end %>
  </div>
</div>