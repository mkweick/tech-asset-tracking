<div class="row">
  <div class="well col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3">
    <%= form_for @category, html: { class: "form-horizontal" } do |f| %>
      <div class="form-group form-group-lg">
        <%= f.label :name, class: "col-xs-2 col-md-2 control-label" %>
        <div class="col-xs-10 col-md-10">
          <%= f.text_field :name, autofocus: 'autofocus',
                                  placeholder: "letters and spaces only",
                                  class: "form-control" %>
        </div>
      </div>
      
      <div class="text-center">
        <%= f.submit ctg_btn(@category), class: "btn btn-default ks-red-btn" %>
        <%= link_to "Cancel", categories_path,
                              class: "btn btn-default btn-red-light" %>
      </div>
    <% end %>
  </div>
</div>