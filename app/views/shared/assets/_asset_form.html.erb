<div class="row">
  <div class="well col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
    <%= form_for obj, html: { class: "form-horizontal" } do |f| %>
      <div class="form-group">
        <%= f.label :mfg_name, "Mfg Name",
                                class: "col-xs-3 col-md-3 control-label" %>
        <div class="col-xs-9 col-md-9">
          <%= f.text_field :mfg_name, autofocus: "autofocus",
                                      class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :model_num, "Model #",
                                class: "col-xs-3 col-md-3 control-label" %>
        <div class="col-xs-9 col-md-9">
          <%= f.text_field :model_num, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :serial_num, "Serial #",
                                  class: "col-xs-3 col-md-3 control-label" %>
        <div class="col-xs-9 col-md-9">
          <%= f.text_field :serial_num, placeholder: "alphanumeric characters" + 
                                                     " and hypens/underscores",
                                        class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :description, class: "col-xs-3 col-md-3 control-label" %>
        <div class="col-xs-9 col-md-9">
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :category_id, "Category",
                                  class: "col-xs-3 col-md-3 control-label" %>
        <div class="col-xs-9 col-md-9">
          <%= f.collection_select :category_id, Category.all.order(name: :asc),
                                  :id, :name, { :include_blank => "Select" },
                                  { :class => "form-control" } %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :purchase_date, class: "col-xs-3 col-md-3 control-label" %>
        <div class="col-xs-9 col-md-9">
          <%= f.date_field :purchase_date, class: "form-control" %>
        </div>
      </div>
      
      <div class="text-center">
        <%= f.submit asset_btn(obj), class: "btn btn-default ks-red-btn" %>
      </div>
    <% end %>
  </div>
</div>